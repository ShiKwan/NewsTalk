

<div class="jumbotron  jumbotron-home">
    <div class="container">
        <h1 class="display-4">News Talk</h1>
        <p class="lead">A platform to discuss today's tech!</p>
        <div class="lead text-right">
            <form id="scrape" action="/scrape" method="post">
                <a class="btn btn-primary btn-lg btn-danger hypScrape" href="#" role="button" onclick="document.getElementById('scrape').submit();">Scrape new articles!</a>
                <a class="btn btn-primary btn-lg btn-success" href="/headline" role="button">View Saved Headlines</a>
            </form>
        </div>
    </div>
</div>

<div class="article-container">
    <div class="list-group">
        {{#each dbHeadline}}
            <button type="button" class="list-group-item list-group-item-action">
                    <div class='panel panel-default'>
                        <div class='panel-heading'>
                            <a name='link' href='{{this.link}}'><h2 name='title'>{{this.title}}</h2></a>
                        </div>
                        <div class="panel-body">
                            <p name='date' class='text-right'>Date : {{getDate this.date}}</p>
                            <p name='teaser'>{{this.teaser}}</p>
                        </div>
                        <div class='panel-footer text-right'>
                            <form id='save{{this.link}}' action='/headline' method='post'>
                                <input id='headline-title' type='hidden' name='title' value='{{this.title}}' />
                                <input id='headline-link' type='hidden' name='link' value='{{this.link}}' />
                                <input id='headline-date' type='hidden' name='date' value='{{this.date}}' />
                                <input id='headline-teaser' type='hidden' name='teaser' value='{{this.teaser}}' />
                                <a href="#" class="btn btn-secondary btn-lg active text-right hypLikeNote" role="button" aria-pressed="true" onclick="document.getElementById('save{{this.link}}').submit();"><i class='fas fa-heart '></i> like this </a>
                            </form>
                        </div>
                    </div>
            </button>
        {{/each}}
    </div>
</div>
